{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyAllByDefault",
      "Effect": "Deny",
      "Action": "*",
      "Resource": "*"
    },
    {
      "Sid": "AllowPutOnlyOnBucket",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl"
      ],
      "Resource": "${bucket_arn}/*"
    },
    {
      "Sid": "AllowBucketListForPrefixMatch",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "${bucket_arn}",
      "Condition": {
        "StringLike": {
          "s3:prefix": "logs/*"
        }
      }
    }
  ]
}
